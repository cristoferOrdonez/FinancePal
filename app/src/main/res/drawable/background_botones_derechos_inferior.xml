<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/verdeOscuro" />
            <corners android:bottomRightRadius="10dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        >
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                />
            <corners android:bottomRightRadius="10dp"/>
            <solid android:color="@color/verdeBotones" />
        </shape>
    </item>

</layer-list>