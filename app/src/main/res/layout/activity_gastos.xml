<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/recuadroSuperiorGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/verdeClaro"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tituloSuperiorGastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIS GASTOS"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorGastos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recuadroSuperiorGastos"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/botonMasIngresos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/boton_mas" />

        <Button
            android:id="@+id/botonAgregarGasto"
            android:layout_width="93dp"
            android:layout_height="80dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="44dp"
            android:background="#00FFFFFF"
            android:onClick="cambiarANuevoGasto"
            android:text="."
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <Button
            android:id="@+id/botonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/verdeOscuro"
            android:onClick="cambiarAPantallaPrincipal"
            android:text="Volver"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorGastos"
            app:layout_constraintEnd_toStartOf="@+id/tituloSuperiorGastos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listViewGastos"
            android:layout_width="387dp"
            android:layout_height="289dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recuadroSuperiorGastos" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
