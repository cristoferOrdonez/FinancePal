<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gastos">

    <ImageView
        android:id="@+id/botonMasIngresos"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/boton_mas" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recuadroSuperiorGastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/verdeClaro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloSuperiorGastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIS GASTOS"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorGastos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/recuadroSuperiorGastos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdeOscuro"
        android:onClick="cambiarAPantallaPrincipal"
        android:text="Volver"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorGastos"
        app:layout_constraintEnd_toStartOf="@+id/tituloSuperiorGastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonAgregarGasto"
        android:layout_width="87dp"
        android:layout_height="81dp"
        android:background="#00FFFFFF"
        android:onClick="cambiarANuevoGasto"
        android:text="."
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/botonMasIngresos"
        app:layout_constraintEnd_toEndOf="@+id/botonMasIngresos"
        app:layout_constraintStart_toStartOf="@+id/botonMasIngresos"
        app:layout_constraintTop_toTopOf="@+id/botonMasIngresos"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <ListView
        android:id="@+id/listViewGastos"
        android:layout_width="409dp"
        android:layout_height="667dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recuadroSuperiorGastos" />

</androidx.constraintlayout.widget.ConstraintLayout>