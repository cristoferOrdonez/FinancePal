<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AgregarCategoriaGasto">

    <EditText
        android:id="@+id/editTextNombreCatGastos"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_buttons"
        android:ems="10"
        android:hint="nombre"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCrearGuardarCatGastos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="detectarIntencionBoton"
        android:text="Crear - Guardar"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintBottom_toTopOf="@+id/botonCancelarCatGastos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonCancelarCatGastos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="cambiaraAtras"
        android:text="Cancelar"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextDescCatGastos"
        android:layout_width="270dp"
        android:layout_height="360dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:background="@drawable/background_buttons"
        android:gravity="start|top"
        android:hint="descripciÃ³n"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreCatGastos" />
</androidx.constraintlayout.widget.ConstraintLayout>