<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/recuadroSuperiorCategGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/verdeClaro"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tituloSuperiorCategGastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORÃAS"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorCategGastos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recuadroSuperiorCategGastos"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonVolver"
            android:layout_width="91dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/verdeOscuro"
            android:onClick="cambiaraAtras"
            android:text="Volver"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorCategGastos"
            app:layout_constraintEnd_toStartOf="@+id/tituloSuperiorCategGastos"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

        <ListView
            android:id="@+id/listViewCategGastos"
            android:layout_width="382dp"
            android:layout_height="716dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recuadroSuperiorCategGastos" >

        </ListView>

        <ImageView
            android:id="@+id/botonMasIngresos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/boton_mas" />

        <Button
            android:id="@+id/botonAgregarCategGasto"
            android:layout_width="93dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:onClick="cambiaraNuevaCateg"
            android:text="."
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>