<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CrearModificarIngresos">

    <TextView
        android:id="@+id/textViewMontoIngresos"
        android:layout_width="233dp"
        android:layout_height="22dp"

        android:text="Monto"
        app:layout_constraintBottom_toTopOf="@+id/editTextMontoCrearModificarIngresos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNombreIngresos"
        android:layout_width="233dp"
        android:layout_height="22dp"

        android:text="Nombre o razón"
        app:layout_constraintBottom_toTopOf="@+id/editTextNombreCrearModificarIngresos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonCrearGuardarCrearModificarIngresos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="detectarIntencionBoton"
        android:text="Crear - Guardar"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMontoCrearModificarIngresos" />

    <EditText
        android:id="@+id/editTextMontoCrearModificarIngresos"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_buttons"
        android:ems="10"
        android:hint="monto"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreCrearModificarIngresos" />

    <EditText
        android:id="@+id/editTextNombreCrearModificarIngresos"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/background_buttons"
        android:ems="10"
        android:hint="nombre o razón"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCancelarCrearModificarIngresos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="cambiarAIngresos"
        android:text="Cancelar"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>