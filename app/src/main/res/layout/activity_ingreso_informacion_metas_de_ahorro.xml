<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ingresoInformacionMetasDeAhorro">

    <EditText
        android:id="@+id/textoNombreMetaEditar"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_buttons"
        android:ems="10"
        android:hint="Nombre de la meta"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textoFechaMetaEditar"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_buttons"
        android:clickable="true"

        android:ems="10"
        android:focusable="false"

        android:hint="mm/aaaa"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreMetaEditar" />

    <EditText
        android:id="@+id/textoMontoMetaEditar"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_buttons"
        android:ems="10"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFechaMetaEditar" />

    <Button
        android:id="@+id/botonGuardarMetasEditar"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Crear"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoMontoMetaEditar" />

    <Button
        android:id="@+id/botonAtrasRegistroMetasdeAhorro"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Cancelar"
        android:textColor="@color/white"
        app:backgroundTint="@color/verdeOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>