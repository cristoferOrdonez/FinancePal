<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Balance">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recuadroInferiorInicio5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/verdeOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recuadroSuperiorBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verdeClaro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloSuperiorBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANCE"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroSuperiorBalance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/recuadroSuperiorBalance"
        app:layout_constraintTop_toTopOf="@+id/recuadroSuperiorBalance" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroInferiorInicio5"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/botonInicioBALANCE"
                android:layout_width="101dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/boton_inicio_des_select" />

            <ImageView
                android:id="@+id/botonBalanceBALANCE"
                android:layout_width="101dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/boton_balance_select" />

            <ImageView
                android:id="@+id/botonHistoricoBALANCE"
                android:layout_width="101dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/boton_historico_des_select" />

            <ImageView
                android:id="@+id/botonMisDatosBALANCE"
                android:layout_width="101dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/boton_mis_datos_des_select" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>